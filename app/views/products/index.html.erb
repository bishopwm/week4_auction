<h2>Products</h2>


<ul>
	<% @products.each do |product| %>
		<li><%= image_tag @product.photo.url %></li>
		<li>Title:
			<%= product.title %>
		</li>
		<li>Product ID:
			<%= product.id %>
		<li>Description:
			<%= product.description %>
		</li>
		<li>Deadline:
			<%= product.deadline %>
		</li>
		<li>User ID:
			<%= product.user_id %>
		</li>
		<li>Posted by:
			<%= @user.show_name %>
		</li>
		<br />
		<br />

	<% end %>
</ul>


