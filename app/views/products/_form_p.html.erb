
<h4>New Product:</h4>

 <%= form_for [@user, @product] do |f| %>



	<div class="field">
		<%= f.label :user_id %>
		<br />
		<%= f.text_field :user_id %>
	</div>

	<div class="field">
		<%= f.label :title %>
		<br />
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :description %>
		<br />
		<%= f.text_field :description %>
	</div>

	<div class="field">
		<%= f.label :deadline %>
		<br />
		<%= f.text_field :deadline %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>